<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <payment>
            <groups>
                <space48_bpf_method>
                    <label>Barclays Partner Finance</label>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <!-- active -->
                        <active translate="label comment" module="space48_bpf">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Enable/disable this payment method.]]></comment>
                        </active>
                        
                        <!-- title -->
                        <title translate="label comment" module="space48_bpf">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        
                        <!-- min -->
                        <min>
                            <label>Minimum Amount Applicable</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </min>
                        
                        <!-- login name -->
                        <login_name>
                            <label>Login Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </login_name>
                        
                        <!-- password -->
                        <password>
                            <label>Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </password>
                        
                        <!-- asset type -->
                        <asset_type>
                            <label>Asset Type</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>55</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </asset_type>
                        
                        <!-- redirect url -->
                        <redirect_url>
                            <label>Redirect URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirect_url>
                        
                        <!-- sort order -->
                        <sort_order>
                            <label>Sort Order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sort_order>
                        
                        <!-- finance accepted email -->
                        <accepted_email_send>
                            <label>Send Finance Accepted Email?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </accepted_email_send>
                        
                        <accepted_email_template>
                            <label>Finance Accepted Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>101</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><accepted_email_send>1</accepted_email_send></depends>
                        </accepted_email_template>
                        
                        <accepted_email_recipients>
                            <label>Finance Accepted Email Recipients</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>102</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><accepted_email_send>1</accepted_email_send></depends>
                            <comment><![CDATA[One email address per line.]]></comment>
                        </accepted_email_recipients>
                        
                        <!-- finance referred email -->
                        <referred_email_send>
                            <label>Send Finance Referred Email?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </referred_email_send>
                        
                        <referred_email_template>
                            <label>Finance Referred Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>111</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><referred_email_send>1</referred_email_send></depends>
                        </referred_email_template>
                        
                        <referred_email_recipients>
                            <label>Finance Referred Email Recipients</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>112</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><referred_email_send>1</referred_email_send></depends>
                            <comment><![CDATA[One email address per line.]]></comment>
                        </referred_email_recipients>
                        
                        <!-- finance declined email -->
                        <declined_email_send>
                            <label>Send Finance Declined Email?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </declined_email_send>
                        
                        <declined_email_template>
                            <label>Finance Declined Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>121</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><declined_email_send>1</declined_email_send></depends>
                        </declined_email_template>
                        
                        <declined_email_recipients>
                            <label>Finance Declined Email Recipients</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>122</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><declined_email_send>1</declined_email_send></depends>
                            <comment><![CDATA[One email address per line.]]></comment>
                        </declined_email_recipients>
                        
                        <!-- finance cancelled email -->
                        <cancelled_email_send>
                            <label>Send Finance Cancelled Email?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cancelled_email_send>
                        
                        <cancelled_email_template>
                            <label>Finance Cancelled Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>131</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><cancelled_email_send>1</cancelled_email_send></depends>
                        </cancelled_email_template>
                        
                        <cancelled_email_recipients>
                            <label>Finance Cancelled Email Recipients</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>132</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><cancelled_email_send>1</cancelled_email_send></depends>
                            <comment><![CDATA[One email address per line.]]></comment>
                        </cancelled_email_recipients>
                    </fields>
                </space48_bpf_method>
            </groups>
        </payment>
    </sections>
</config>
